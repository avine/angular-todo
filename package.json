{
  "name": "angular-todo",
  "version": "0.5.0",
  "description": "Manage your todo list with Angular",
  "license": "MIT",
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "start-i18n-fr": "ng serve --aot --i18n-file=src/i18n/messages.fr.xlf --locale=fr --i18n-format=xlf",
    "build": "lang=en; echo \"$(tput setaf 2)Building '${lang}'...$(tput sgr0)\" && ng build --output-path=dist/$lang --aot -prod --bh /projects/angular-todo/$lang/ --locale=$lang",
    "build-i18n": "for lang in fr; do echo \"\n$(tput setaf 2)Building '${lang}'...$(tput sgr0)\" && ng build --output-path=dist/$lang --aot -prod --bh /projects/angular-todo/$lang/ --i18n-file=src/i18n/messages.$lang.xlf --i18n-format=xlf --locale=$lang; done",
    "deploy": "npm run build && npm run build-i18n && cp src/apache/.htaccess src/apache/index.html dist/",
    "start-deploy": "http-server dist/ -o",
    "i18n": "ng xi18n --i18nFormat=xlf --output-path=src/i18n/",
    "test": "ng test",
    "lint": "ng lint",
    "e2e": "ng e2e"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/avine/angular-todo.git"
  },
  "keywords": [
    "Angular",
    "TypeScript"
  ],
  "author": "St√©phane Francel <contact@avine.io>",
  "bugs": {
    "url": "https://github.com/avine/angular-todo/issues"
  },
  "homepage": "https://github.com/avine/angular-todo#readme",
  "private": true,
  "dependencies": {
    "@angular/animations": "^4.0.0",
    "@angular/common": "^4.0.0",
    "@angular/compiler": "^4.0.0",
    "@angular/core": "^4.0.0",
    "@angular/forms": "^4.0.0",
    "@angular/http": "^4.0.0",
    "@angular/platform-browser": "^4.0.0",
    "@angular/platform-browser-dynamic": "^4.0.0",
    "@angular/router": "^4.0.0",
    "bootstrap": "^4.0.0-alpha.6",
    "core-js": "^2.4.1",
    "jquery": "^3.2.1",
    "rxjs": "^5.4.1",
    "tether": "^1.4.0",
    "zone.js": "^0.8.14"
  },
  "devDependencies": {
    "@angular/cli": "1.2.7",
    "@angular/compiler-cli": "^4.0.0",
    "@angular/language-service": "^4.0.0",
    "@types/jasmine": "~2.5.53",
    "@types/jasminewd2": "~2.0.2",
    "@types/node": "~6.0.60",
    "codelyzer": "~3.0.1",
    "http-server": "^0.10.0",
    "jasmine-core": "~2.6.2",
    "jasmine-spec-reporter": "~4.1.0",
    "karma": "~1.7.0",
    "karma-chrome-launcher": "~2.1.1",
    "karma-cli": "~1.0.1",
    "karma-coverage-istanbul-reporter": "^1.2.1",
    "karma-jasmine": "~1.1.0",
    "karma-jasmine-html-reporter": "^0.2.2",
    "protractor": "~5.1.2",
    "ts-node": "~3.0.4",
    "tslint": "~5.3.2",
    "typescript": "~2.3.3"
  }
}
